---
import Layout from "../layouts/Layout.astro";
import Header from "../components/layout/Header";
import Footer from "../components/layout/Footer.astro";
import Breadcrumb from "../components/ui/Breadcrumb.astro";
import "../styles/global.css";
---

<Layout 
	title="Guía de Trámites - Municipalidad de Lonquimay"
	description="Consulta los requisitos y procedimientos para realizar trámites en la Municipalidad de Lonquimay."
>
	<Header client:load currentPage="Guía de Trámites" />

        <main class="min-h-screen bg-gray-50 pt-20 md:pt-28">
            <section
                class="bg-gradient-to-r from-[#7bc143] to-[#6aa839] text-white py-16 md:py-24"
            >
                <div class="container mx-auto px-4 md:px-8 max-w-6xl">
                    <Breadcrumb 
                        items={[
                            { label: 'Guía de Trámites', href: '#' }
                        ]} 
                    />
                    <h1 class="text-4xl md:text-5xl font-bold mb-4">
                        Guía de Trámites
                    </h1>
                    <p class="text-xl text-white/90">
                        Encuentra la información necesaria para realizar tus
                        trámites municipales
                    </p>
                </div>
            </section>

            <section class="py-12 md:py-16">
                <div class="container mx-auto px-4 md:px-8 max-w-6xl">
                    <div
                        class="bg-white rounded-2xl shadow-lg p-8 md:p-10 mb-8"
                    >
                        <div class="flex items-start gap-4 mb-6">
                            <div
                                class="w-14 h-14 bg-[#7bc143] rounded-xl flex items-center justify-center flex-shrink-0"
                            >
                                <svg
                                    class="w-8 h-8 text-white"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                                    ></path>
                                </svg>
                            </div>
                            <div class="flex-1">
                                <h2
                                    class="text-2xl font-bold text-gray-800 mb-2"
                                >
                                    Licencia de Conducir
                                </h2>
                                <p class="text-gray-600">
                                    Requisitos y horarios para obtener o renovar tu licencia de conducir
                                </p>
                            </div>
                        </div>

                        <div class="space-y-6">
                            <div class="bg-gray-50 rounded-xl p-6">
                                <h3
                                    class="font-bold text-gray-800 mb-4 flex items-center gap-2"
                                >
                                    <svg
                                        class="w-5 h-5 text-[#7bc143]"
                                        fill="currentColor"
                                        viewBox="0 0 20 20"
                                    >
                                        <path
                                            fill-rule="evenodd"
                                            d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
                                            clip-rule="evenodd"></path>
                                    </svg>
                                    Requisitos
                                </h3>
                                <ul class="space-y-3">
                                    <li class="flex items-start gap-3">
                                        <span class="text-[#7bc143] mt-1">✓</span>
                                        <span class="text-gray-700">DNI original y fotocopia</span>
                                    </li>
                                    <li class="flex items-start gap-3">
                                        <span class="text-[#7bc143] mt-1">✓</span>
                                        <span class="text-gray-700">Grupo sanguíneo</span>
                                    </li>
                                    <li class="flex items-start gap-3">
                                        <span class="text-[#7bc143] mt-1">✓</span>
                                        <span class="text-gray-700">Libre deuda municipal</span>
                                    </li>
                                </ul>
                            </div>

                            <div class="bg-blue-50 rounded-xl p-6 border border-blue-100">
                                <h3
                                    class="font-bold text-gray-800 mb-4 flex items-center gap-2"
                                >
                                    <svg
                                        class="w-5 h-5 text-blue-600"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                                        ></path>
                                    </svg>
                                    Horarios de Exámenes
                                </h3>
                                <p class="text-gray-700 font-semibold mb-2">
                                    Se toman exámenes los <span class="text-[#7bc143]">martes y jueves</span>
                                </p>
                                <p class="text-gray-600 text-sm">
                                    Consultar horarios específicos en la oficina
                                </p>
                            </div>

                            <div class="bg-green-50 rounded-xl p-6 border border-green-100">
                                <h3
                                    class="font-bold text-gray-800 mb-4 flex items-center gap-2"
                                >
                                    <svg
                                        class="w-5 h-5 text-green-600"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
                                        ></path>
                                    </svg>
                                    Médico
                                </h3>
                                <p class="text-gray-700">
                                    El médico atiende los días <span class="font-semibold">[Consultar días específicos]</span>
                                </p>
                                <p class="text-gray-600 text-sm mt-2">
                                    Es necesario realizar el examen médico antes del examen práctico
                                </p>
                            </div>
                        </div>
                    </div>

                    <div
                        class="bg-white rounded-2xl shadow-lg p-8 md:p-10 mb-8"
                    >
                        <div class="flex items-start gap-4 mb-6">
                            <div
                                class="w-14 h-14 bg-[#4a9bb7] rounded-xl flex items-center justify-center flex-shrink-0"
                            >
                                <svg
                                    class="w-8 h-8 text-white"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"
                                    ></path>
                                </svg>
                            </div>
                            <div class="flex-1">
                                <h2
                                    class="text-2xl font-bold text-gray-800 mb-2"
                                >
                                    Guías de Transporte (Hacienda)
                                </h2>
                                <p class="text-gray-600">
                                    Documentación para transporte de hacienda y mercadería del campo
                                </p>
                            </div>
                        </div>

                        <div class="bg-gray-50 rounded-xl p-6">
                            <div class="space-y-4">
                                <div>
                                    <h3 class="font-bold text-gray-800 mb-2 flex items-center gap-2">
                                        <svg
                                            class="w-5 h-5 text-[#4a9bb7]"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                                            ></path>
                                        </svg>
                                        Horarios de Emisión
                                    </h3>
                                    <p class="text-gray-700">
                                        Lunes a Viernes de 7:30 a 12:30 hs
                                    </p>
                                </div>
                                <div>
                                    <h3 class="font-bold text-gray-800 mb-2 flex items-center gap-2">
                                        <svg
                                            class="w-5 h-5 text-[#4a9bb7]"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                                            ></path>
                                        </svg>
                                        Teléfono del Encargado
                                    </h3>
                                    <p class="text-gray-700">
                                        (02954) 494255 - Sector Hacienda
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div
                        class="bg-white rounded-2xl shadow-lg p-8 md:p-10 mb-8"
                    >
                        <div class="flex items-start gap-4 mb-6">
                            <div
                                class="w-14 h-14 bg-[#4a9bb7] rounded-xl flex items-center justify-center flex-shrink-0"
                            >
                                <svg
                                    class="w-8 h-8 text-white"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                                    ></path>
                                </svg>
                            </div>
                            <div class="flex-1">
                                <h2
                                    class="text-2xl font-bold text-gray-800 mb-2"
                                >
                                    Obras / Catastro
                                </h2>
                                <p class="text-gray-600">
                                    Requisitos para presentar planos y trámites de catastro
                                </p>
                            </div>
                        </div>

                        <div class="bg-gray-50 rounded-xl p-6">
                            <h3
                                class="font-bold text-gray-800 mb-4 flex items-center gap-2"
                            >
                                <svg
                                    class="w-5 h-5 text-[#4a9bb7]"
                                    fill="currentColor"
                                    viewBox="0 0 20 20"
                                >
                                    <path
                                        fill-rule="evenodd"
                                        d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
                                        clip-rule="evenodd"></path>
                                </svg>
                                Requisitos para Presentar Planos
                            </h3>
                            <ul class="space-y-3">
                                <li class="flex items-start gap-3">
                                    <span class="text-[#4a9bb7] mt-1">✓</span>
                                    <span class="text-gray-700">Planos firmados por profesional matriculado</span>
                                </li>
                                <li class="flex items-start gap-3">
                                    <span class="text-[#4a9bb7] mt-1">✓</span>
                                    <span class="text-gray-700">Memoria descriptiva del proyecto</span>
                                </li>
                                <li class="flex items-start gap-3">
                                    <span class="text-[#4a9bb7] mt-1">✓</span>
                                    <span class="text-gray-700">Título de propiedad o contrato de alquiler</span>
                                </li>
                                <li class="flex items-start gap-3">
                                    <span class="text-[#4a9bb7] mt-1">✓</span>
                                    <span class="text-gray-700">DNI del propietario y del profesional</span>
                                </li>
                                <li class="flex items-start gap-3">
                                    <span class="text-[#4a9bb7] mt-1">✓</span>
                                    <span class="text-gray-700">Certificado de libre deuda municipal</span>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div
                        class="bg-gradient-to-r from-blue-50 to-cyan-50 rounded-2xl p-8 border border-blue-100"
                    >
                        <h2 class="text-xl font-bold text-gray-800 mb-4">
                            Información Importante
                        </h2>
                        <div class="grid md:grid-cols-2 gap-6 text-sm">
                            <div class="flex items-start gap-3">
                                <svg
                                    class="w-5 h-5 text-blue-600 mt-0.5 flex-shrink-0"
                                    fill="currentColor"
                                    viewBox="0 0 20 20"
                                >
                                    <path
                                        fill-rule="evenodd"
                                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                                        clip-rule="evenodd"></path>
                                </svg>
                                <div>
                                    <p class="font-semibold text-gray-800 mb-1">
                                        Horario de Atención
                                    </p>
                                    <p class="text-gray-600">
                                        Lunes a Viernes de 7:00 a 13:00 hs
                                    </p>
                                </div>
                            </div>
                            <div class="flex items-start gap-3">
                                <svg
                                    class="w-5 h-5 text-blue-600 mt-0.5 flex-shrink-0"
                                    fill="currentColor"
                                    viewBox="0 0 20 20"
                                >
                                    <path
                                        d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"
                                    ></path>
                                </svg>
                                <div>
                                    <p class="font-semibold text-gray-800 mb-1">
                                        Consultas
                                    </p>
                                    <p class="text-gray-600">(02954) 494255</p>
                                    <p class="text-gray-600">
                                        info@lonquimay.gob.ar
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </main>

	<Footer />
</Layout>

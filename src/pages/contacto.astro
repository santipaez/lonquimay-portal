---
import Layout from "../layouts/Layout.astro";
import Header from "../components/layout/Header";
import Footer from "../components/layout/Footer.astro";
import Breadcrumb from "../components/ui/Breadcrumb.astro";
import "../styles/global.css";
---

<Layout 
	title="Contacto - Municipalidad de Lonquimay"
	description="Ponte en contacto con la Municipalidad de Lonquimay. Teléfonos, dirección y horarios de atención."
>
	<Header client:load currentPage="Contacto" />

        <main class="min-h-screen bg-gray-50 pt-20 md:pt-28">
            <section
                class="bg-gradient-to-r from-[#7bc143] to-[#6aa839] text-white py-16 md:py-24"
            >
                <div class="container mx-auto px-4 md:px-8 max-w-6xl">
                    <Breadcrumb 
                        items={[
                            { label: 'Contacto', href: '#' }
                        ]} 
                    />
                    <h1 class="text-4xl md:text-5xl font-bold mb-4">
                        Contacto
                    </h1>
                    <p class="text-xl text-white/90">
                        Estamos para ayudarte. Comunicate con nosotros
                    </p>
                </div>
            </section>

            <section class="py-12 md:py-16">
                <div class="container mx-auto px-4 md:px-8 max-w-6xl">
                    <div class="grid md:grid-cols-2 gap-8 mb-12">
                        <div class="space-y-6">
                            <div class="bg-white rounded-2xl shadow-lg p-8">
                                <h2
                                    class="text-2xl font-bold text-gray-800 mb-6"
                                >
                                    Información de Contacto
                                </h2>

                                <div class="space-y-6">
                                    <div class="flex items-start gap-4">
                                        <div
                                            class="w-12 h-12 bg-[#7bc143] rounded-lg flex items-center justify-center flex-shrink-0"
                                        >
                                            <svg
                                                class="w-6 h-6 text-white"
                                                fill="none"
                                                stroke="currentColor"
                                                viewBox="0 0 24 24"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                                                ></path>
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                                                ></path>
                                            </svg>
                                        </div>
                                        <div>
                                            <h3
                                                class="font-bold text-gray-800 mb-1"
                                            >
                                                Dirección
                                            </h3>
                                            <p class="text-gray-600">
                                                Pedro Bordarampé N°488
                                            </p>
                                            <p class="text-gray-600">
                                                CP: 6352, Lonquimay, La Pampa
                                            </p>
                                        </div>
                                    </div>

                                    <div class="flex items-start gap-4">
                                        <div
                                            class="w-12 h-12 bg-[#4a9bb7] rounded-lg flex items-center justify-center flex-shrink-0"
                                        >
                                            <svg
                                                class="w-6 h-6 text-white"
                                                fill="currentColor"
                                                viewBox="0 0 20 20"
                                            >
                                                <path
                                                    d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"
                                                ></path>
                                            </svg>
                                        </div>
                                        <div>
                                            <h3
                                                class="font-bold text-gray-800 mb-1"
                                            >
                                                Teléfono
                                            </h3>
                                            <p class="text-gray-600">
                                                (02954) 494255
                                            </p>
                                        </div>
                                    </div>

                                    <div class="flex items-start gap-4">
                                        <div
                                            class="w-12 h-12 bg-[#7bc143] rounded-lg flex items-center justify-center flex-shrink-0"
                                        >
                                            <svg
                                                class="w-6 h-6 text-white"
                                                fill="currentColor"
                                                viewBox="0 0 20 20"
                                            >
                                                <path
                                                    d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
                                                ></path>
                                                <path
                                                    d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"
                                                ></path>
                                            </svg>
                                        </div>
                                        <div>
                                            <h3
                                                class="font-bold text-gray-800 mb-1"
                                            >
                                                Email
                                            </h3>
                                            <p class="text-gray-600">
                                                info@lonquimay.gob.ar
                                            </p>
                                        </div>
                                    </div>

                                    <div class="flex items-start gap-4">
                                        <div
                                            class="w-12 h-12 bg-[#4a9bb7] rounded-lg flex items-center justify-center flex-shrink-0"
                                        >
                                            <svg
                                                class="w-6 h-6 text-white"
                                                fill="currentColor"
                                                viewBox="0 0 20 20"
                                            >
                                                <path
                                                    fill-rule="evenodd"
                                                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                                                    clip-rule="evenodd"></path>
                                            </svg>
                                        </div>
                                        <div>
                                            <h3
                                                class="font-bold text-gray-800 mb-1"
                                            >
                                                Horario de Atención
                                            </h3>
                                            <p class="text-gray-600">
                                                Lunes a Viernes
                                            </p>
                                            <p class="text-gray-600">
                                                7:00 a 13:00 hs
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div
                                class="bg-gradient-to-br from-[#7bc143] to-[#6aa839] rounded-2xl shadow-lg p-8 text-white"
                            >
                                <h2 class="text-2xl font-bold mb-6">
                                    Seguinos en Redes
                                </h2>
                                <div class="flex gap-4">
                                    <a
                                        href="https://www.facebook.com/municipalidadlonquimay"
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center hover:bg-white hover:text-[#7bc143] transition-colors"
                                        aria-label="Seguir a Municipalidad de Lonquimay en Facebook"
                                    >
                                        <svg
                                            class="w-6 h-6"
                                            fill="currentColor"
                                            viewBox="0 0 24 24"
                                            aria-hidden="true"
                                        >
                                            <path
                                                d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
                                            ></path>
                                        </svg>
                                    </a>
                                    <a
                                        href="https://www.instagram.com/municipalidadlonquimay"
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center hover:bg-white hover:text-[#7bc143] transition-colors"
                                        aria-label="Seguir a Municipalidad de Lonquimay en Instagram"
                                    >
                                        <svg
                                            class="w-6 h-6"
                                            fill="currentColor"
                                            viewBox="0 0 24 24"
                                            aria-hidden="true"
                                        >
                                            <path
                                                d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                                            ></path>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div
                            class="bg-white rounded-2xl shadow-lg overflow-hidden h-[500px]"
                        >
                            <iframe
                                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d106553.43872!2d-63.6234!3d-36.4667!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95c2e12345678901%3A0x123456789!2sLonquimay%2C%20La%20Pampa!5e0!3m2!1ses!2sar!4v1234567890"
                                width="100%"
                                height="100%"
                                style="border:0;"
                                allowfullscreen=""
                                loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade"
                                title="Mapa de Lonquimay"></iframe>
                        </div>
                    </div>

                    <div class="bg-white rounded-2xl shadow-lg p-8 md:p-12">
                        <h2 class="text-2xl font-bold text-gray-800 mb-6">
                            Envíanos un Mensaje
                        </h2>
                        <form class="grid md:grid-cols-2 gap-6">
                            <div>
                                <label
                                    class="block text-sm font-semibold text-gray-700 mb-2"
                                    >Nombre Completo</label
                                >
                                <input
                                    type="text"
                                    class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#7bc143] focus:border-transparent"
                                    placeholder="Tu nombre"
                                />
                            </div>
                            <div>
                                <label
                                    class="block text-sm font-semibold text-gray-700 mb-2"
                                    >Email</label
                                >
                                <input
                                    type="email"
                                    class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#7bc143] focus:border-transparent"
                                    placeholder="tu@email.com"
                                />
                            </div>
                            <div>
                                <label
                                    class="block text-sm font-semibold text-gray-700 mb-2"
                                    >Teléfono</label
                                >
                                <input
                                    type="tel"
                                    class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#7bc143] focus:border-transparent"
                                    placeholder="Tu teléfono"
                                />
                            </div>
                            <div>
                                <label
                                    class="block text-sm font-semibold text-gray-700 mb-2"
                                    >Asunto</label
                                >
                                <input
                                    type="text"
                                    class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#7bc143] focus:border-transparent"
                                    placeholder="¿Sobre qué querés consultar?"
                                />
                            </div>
                            <div class="md:col-span-2">
                                <label
                                    class="block text-sm font-semibold text-gray-700 mb-2"
                                    >Mensaje</label
                                >
                                <textarea
                                    rows="5"
                                    class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#7bc143] focus:border-transparent"
                                    placeholder="Escribí tu mensaje aquí..."
                                ></textarea>
                            </div>
                            <div class="md:col-span-2">
                                <button
                                    type="submit"
                                    class="bg-[#7bc143] hover:bg-[#6aa839] text-white px-8 py-3 rounded-lg font-bold transition-colors shadow-lg"
                                >
                                    Enviar Mensaje
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </section>
        </main>

	<Footer />
</Layout>

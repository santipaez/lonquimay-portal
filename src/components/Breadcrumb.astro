---
interface Props {
  items: {
    label: string;
    href: string;
  }[];
}

const { items } = Astro.props;
---

<nav aria-label="Breadcrumb" class="flex items-center text-sm text-green-100 mb-4">
  <ol class="inline-flex items-center space-x-1 md:space-x-3">
    <li class="inline-flex items-center">
      <a href="/" class="inline-flex items-center hover:text-white transition-colors">
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path></svg>
        Inicio
      </a>
    </li>
    {items.map((item, index) => (
      <li>
        <div class="flex items-center">
          <svg class="w-5 h-5 text-green-200" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
          {index === items.length - 1 ? (
            // El último ítem no lleva link y es blanco (estás acá)
            <span class="ml-1 font-medium text-white md:ml-2" aria-current="page">
              {item.label}
            </span>
          ) : (
            // Ítems intermedios llevan link
            <a href={item.href} class="ml-1 hover:text-white transition-colors md:ml-2">
              {item.label}
            </a>
          )}
        </div>
      </li>
    ))}
  </ol>
</nav>


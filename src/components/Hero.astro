---
import HeroContent from './HeroContent';

// Imagen de respaldo (fallback) - Descomentá cuando agregues la imagen a src/assets/foto-aerea.jpg
// import { Image } from 'astro:assets';
// import fotoAerea from '../assets/foto-aerea.jpg';
---

<section class="relative h-[750px] md:h-[900px] flex items-center pt-20 md:pt-24">
  {/* Imagen de respaldo (fallback) - Capa trasera 
      Descomentá cuando agregues la imagen a src/assets/foto-aerea.jpg:
  
  <div class="absolute inset-0 z-0 overflow-hidden">
    <Image 
      src={fotoAerea} 
      alt="Vista aérea de Lonquimay"
      class="w-full h-full object-cover"
      quality="mid" 
      format="avif"
      loading="eager" 
      fetchpriority="high"
    />
  </div>
  */}

  {/* Video de fondo - Capa intermedia */}
  <div class="absolute inset-0 z-10 overflow-hidden">
    <video
      autoplay
      loop
      muted
      playsinline
      class="absolute inset-0 w-full h-full object-cover"
      preload="auto"
    >
      <source src="/bg-lonqui.mp4" type="video/mp4" />
    </video>
  </div>

  {/* Overlays oscuros - Capa superior al video */}
  <div class="absolute inset-0 z-20 pointer-events-none">
    <div class="absolute inset-0 bg-black/40"></div>
    <div class="absolute inset-0 bg-gradient-to-r from-slate-900/90 via-slate-900/40 to-transparent"></div>
    <div class="absolute top-0 left-0 right-0 h-32 bg-gradient-to-b from-black/70 to-transparent"></div>
  </div>

  {/* Contenido - Capa superior */}
  <HeroContent client:load />
</section>

